        <font color="red">￥#showMoney($!{member.goldAward})</font><input type="hidden" id="" name="" value="$!{member.goldAward}" readonly >
		 #end    
	</td>
    <td width="8%" align="left" class="TdLabel">现金余额：</td>
    <td  align="left" class="TdInput" >
