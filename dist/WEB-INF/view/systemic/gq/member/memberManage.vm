			data:$("#applyform").serialize(),// 你的formid
       	 	cache: false,
        	success: function(result) {
				var s=$.parseJSON(result);//内容
				var str=s[0].message;
				alert(str);
				location.reload(); 				
        	}
   		});
		}
	}else{
		alert("归属节点不能为空!");
	}
	
}

