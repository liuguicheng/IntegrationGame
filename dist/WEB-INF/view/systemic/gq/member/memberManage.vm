	    }
}
//动态获取用户输入的归属点编号 的廉通道信息
function selectNote(){
 	var note=$("#applynote").val();
	if(note!=""){
		$.ajax({
        	url: '../member/memberAjax.do',
       	 	type: 'POST',
			data:"userName="+note, 
       	 	cache: false,
        	success: function(result) {
				var s=$.parseJSON(result);//内容
				if(s.length>0){
					var str=s[0].message;
					if(s[0].code==1){
						var res=str.split(",");
				 		$("#notelan").val(res[0]);
				 		$("#noteyong").val(res[1]);
					}else{
						alert(str);
						$("#notelan").val("");
				 		$("#noteyong").val("");
					}
				}else{
					    alert("您输入的归属节点编号不存在!");
				 		$("#notelan").val("");
				 		$("#noteyong").val("");
				}
				
        	}
   		});
	}
	
}
//申请加入游戏
function doapply(){
	
 	var note=$("#note").val();
	if(note!=""){
		if(confirm("是否确定赠送1个V1?")){
		$.ajax({
        	url: '../member/activationMemberAjax.do',
