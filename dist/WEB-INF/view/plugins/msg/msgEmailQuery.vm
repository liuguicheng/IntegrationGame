<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  #headInclude()
  <script type="text/javascript">
    #if($message)alert("#javaScriptEscape($message)");#end
  function doadd() {
   window.location.href="../plugins/toaddEmailMessage.do"; 
  }
  function edit(id){
   	window.location.href="../plugins/toaddEmailMessage.do?id="+id; 
  }
  function del(id){
   	if(confirm("确认删除？")){
  	window.location.href="../plugins/doDelEmailMessage.do?id="+id; 
	}
  }
  </script>
</head>
<body>

<div class="PageContainer indieui-scroll">
	<div id="toolbar" style="padding:5px;height:auto">
  <div>
    <form id="queryForm" name="queryForm" action="" method="post" class="indieui-form">
        <table cellpadding="5">
        <tr> 
          <td  colspan="2" style="text-align:center">
            <a href="javascript:doadd()" class="easyui-linkbutton" >发送邮件</a>
        </tr>
      </table> 
    </form>          
  </div>
</div>

<form name="listForm" method="post">
<input type="hidden" name="submitFlag" value="0">
<input type="hidden" name="token" value="$!{command.token}">
<table class="TbList">
  <thead> 
    <tr>
	  <th style="width:140px;">发送者</th>
      <th style="width:140px;">标题</th>
      <th>内容</th>
	  <th style="width:140px;">接收者</th>
	   <th style="width:140px;">是否已读</th>
      <th style="width:140px;">发送时间</th>
	  <th style="width:140px;">操作</th>
    </tr>
  </thead>
  <tbody>
  #foreach( $data in $page.data )
    <tr>
	  <td>$!{data.sendMan}</td>
      <td>$!{data.messageTitel}</td>
      <td style="text-align:left;" class="TdTxtover"><a href="javascript:edit('$!{data.sysMessageInfoId}');">#htmlEscape($!{data.content})</a></td>
      <td>$!{data.receiveMan}</td>
	  <td>#if($!{data.isReaded}==0) 未读  #else 已读   #end</td>
	  <td>#customFormatDate(${data.sendTime} "yyyy-MM-dd HH:mm")</td>
	  <td><a href="javascript:del('$!{data.sysMessageInfoId}');">删除</a></td>
    </tr>
  #end
  </tbody>   
</table>
</form>
</div>
<div data-options="region:'south'" style="overflow-y:hidden"> 
#pageDirector($page "#getRequestUri()" "")
</div>
</body>
</html>