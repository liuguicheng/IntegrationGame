<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  #headInclude()
  <script type="text/javascript" src="../script/validator.js"></script>
  <script type="text/javascript">
  #if($message)alert("#javaScriptEscape($message)");#end
 function confirmPassword()
  {
    var e = document.editForm;
	var password=e.password.value;
	var con_password=e.con_password.value;
    ## var re_letter = /[a-zA-Z]+/.test(password);
    ## var re_number = /[0-9]+/.test(password);
    ## var re_symbol = /[!@#$%^&*()]+/.test(password);
    ## var re_lenght = /[0-9a-zA-Z!@#$%^&*()]{8,18}/.test(password);
	
	if(password==""){
	  alert('新登陆密码不能为空,请输入!');
      return false;
	}
 	if(con_password==""){
	  alert('确认登陆密码不能为空,请输入!');
      return false;
	}
    if (password != con_password) {
      alert('两次输入新密码不一样,请重新输入!');
      return false;
    }
   
    return true;
  }


	function oncheckloginPassword(){
	   if(confirmPassword()){
	   		return true;
	   }
	   return false;
}
	 function doReturn() {
    location.href = history.go(-1);
  }
  </script>
   <style>
.center {
  position: fixed;
  top: 50%;
  left: 50%;
  width:50%;
  height: 50%;
-webkit-transform: translateX(-50%) translateY(-50%);
}

  </style>
</head>
<body>
	<div class="center">
<div class="PageHeader">
  <div class="LeftBox Title">重置密码</div>
</div>
<div class="">
<form id="editForm" name="editForm" method="post" action="../main/doupdatePassword.action" class="indieui-form" onsubmit="return oncheckloginPassword();">
  <input type="hidden" name="submitFlag" value="0" />
  <input type="hidden" name="id" value="$!{id}" />
  <table class="TbCommon">
    <tr>
      <td class="TdLabel" style="width:150px;">#requiredInput("新登陆密码")</td>
      <td class="TdInput">
    	  <input type="password" name="password" value="" style="width:30%" />
      </td>
    </tr>
	<tr>
      <td class="TdLabel">#requiredInput("确新登陆密码")</td>
      <td class="TdInput">
		<input type="password" name="con_password" value="" style="width:30%;" />
		
      </td>
    </tr>
	<tr>
       <td style="text-align:right;"><input type="button" id="btnback" value="返回" onclick="javascript:doReturn();"/></td>
		<td><input type="submit" id="btnconfirm" value="重置登陆密码" onclick="javascript:oncheckloginPassword();" /></td>
    </tr>
  </table>
</form>
</div>
    </div>
</body>
</html>
